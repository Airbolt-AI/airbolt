{
  "name": "@airbolt/react-sdk",
  "version": "0.5.0",
  "description": "React hooks and utilities for the Airbolt API with built-in state management",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    }
  },
  "files": [
    "dist/",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "clean": "rm -rf dist/",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "prepublishOnly": "pnpm run build && echo 'React SDK package ready for publishing'",
    "demo": "cd examples && npx http-server -p 8080 --cors -o standalone-demo.html",
    "docs:build": "typedoc",
    "ladle": "ladle serve",
    "ladle:build": "ladle build"
  },
  "keywords": [
    "react",
    "hooks",
    "sdk",
    "typescript",
    "chat",
    "ai",
    "airbolt"
  ],
  "author": {
    "name": "Mark Watson",
    "email": "mark@example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Airbolt-AI/airbolt.git",
    "directory": "packages/react-sdk"
  },
  "homepage": "https://github.com/Airbolt-AI/airbolt#readme",
  "bugs": {
    "url": "https://github.com/Airbolt-AI/airbolt/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "dependencies": {
    "@airbolt/sdk": "workspace:*"
  },
  "devDependencies": {
    "@ladle/react": "^5.0.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "fast-check": "^4.1.1",
    "happy-dom": "^12.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "typedoc": "^0.28.7",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^3.2.4"
  }
}
