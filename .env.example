# Environment Configuration
# Copy this file to .env and fill in your values

# Node Environment
# Options: development, production, test
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=localhost

# Logging
# Options: fatal, error, warn, info, debug, trace
LOG_LEVEL=info

# OpenAI Integration (Required)
# Get your API key from https://platform.openai.com/api-keys
# Must start with 'sk-'
OPENAI_API_KEY=sk-your-openai-api-key-here

# JWT Authentication
# In development: Auto-generated if not provided
# In production: REQUIRED - Generate with: openssl rand -hex 32
# Minimum 32 characters for security
JWT_SECRET=your-jwt-secret-at-least-32-chars

# CORS Configuration
# Comma-separated list of allowed origins
# Default: http://localhost:5173
# Examples:
# - Single origin: https://example.com
# - Multiple origins: https://example.com,https://app.example.com,http://localhost:3000
ALLOWED_ORIGIN=http://localhost:5173

# System Prompt
# Optional: Custom system prompt for AI interactions
# Leave empty to use default behavior
SYSTEM_PROMPT=

# Rate Limiting
# Maximum requests per time window (default: 60)
RATE_LIMIT_MAX=60

# Rate limit time window in milliseconds (default: 100000ms = 100 seconds)
RATE_LIMIT_TIME_WINDOW=100000